.navbar {
    position: fixed;
    z-index: 999;
}

.card-container {
    padding-bottom: 130rpx;
}

.card-item {
    height: 180rpx;
    background: #fff;
    margin: 30rpx 30rpx 0;
    border-radius: 4rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 6rpx 6rpx 5rpx 0rpx #e5e5e5;
}

.card-icon {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    margin-left: 30rpx;
}

.card-content {
    margin: 0 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
    overflow: hidden;
}

.title {
    font-size: 36rpx;
    margin-bottom: 8rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.description {
    font-size: 28rpx;
    color: #777;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card-right {
    align-items: center;
    margin-right: 30rpx;
    height: 75rpx;
    background: #d85840;
    color: #fff4d2;
    font-size: 30rpx;
    line-height: 75rpx;
    border-radius: 40rpx;
    padding: 0 30rpx;
}

.contact-container {
    display: flex;
    width: 100%;
    position: fixed;
    height: 84rpx;
    bottom: -90rpx;
    border-radius: 0;
    padding: 0;
    align-items: center;
    background-color: #fff7e9;
}

.contact-container:after {
    border: 1rpx solid #ccc;
    border-radius: 0;
}

.contact-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
}

.contact-desc {
    color: #606060;
    font-size: 32rpx;
    flex: 1;
    margin: 0 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: left;
}

.contact-right {
    text-align: center;
    font-size: 32rpx;
    height: 84rpx;
    line-height: 84rpx;
    background-color: #09bb07;
    color: white;
    padding: 0 30rpx;
}

.basic-container {
    width: 100%;
    height: 100%;
    position: relative;
    background: #d85940;
    padding: 0;
    border-radius: 0;
}

.basic-container::after {
    border: none;
}

.basic-container .bottom {
    position: absolute;
    top: 654rpx;
    bottom: 0;
    background: #D9563A;
    width: 100%;
    height: 100%;
}

.basic-msg-box {
    width: 100%;
    padding-top: 120rpx;
    text-align: center;
}

.basic-avatar {
    width: 172rpx;
    height: 172rpx;
    border-radius: 16rpx;
    overflow: hidden;
    margin: 0 auto 0 auto;
    border: 4rpx solid #FED699;
}

.basic-avatar image {
    width: 100%;
    height: 100%;
}

.basic-title {
    color: #FFD666;
    font-size: 42rpx;
    font-weight: bold;
    margin-top: 60rpx;
}

.basic-tips {
    color: #FED699;
    font-size: 34rpx;
}

.auth-button {
    width: 100%;
    border: none;
    background: none;
    padding: 0;
    margin: 0;
}

.auth-button::after {
    border: none;
    background: none;
}

.basic-contact {
    background: none;
    font-size: 32rpx;
    color: #ffd699;
    position: fixed;
    z-index: 9999;
    bottom: 34rpx;
    left: 0;
    right: 0;
    width: 160rpx;
    padding: 0;
}

.basic-contact::after {
    border: none;
    background: none;
}

.home-container {
    position: absolute;
    right: 0;
    top: 10rpx;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2000;
    box-shadow: 0 0 2rpx rgba(255,255,255,1);
    background-color: rgba(0,0,0,0.1);
    border-radius: 30rpx;
    box-sizing: border-box;
    padding: 0;
}

.item {
    width: 75rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.show-back-btn {
    width: 65rpx;
    height: 65rpx;
    border-radius: 50%;
}

.show-back-btn .back:after {
    display: none;
}

.icon {
    width: 32rpx;
    height: 32rpx;
}

.show-back-btn .item {
    width: 65rpx;
}