.checker-view {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: scroll;
    z-index: 9999;
}

.qa-item {
    position: relative;
    width: 540rpx;
    padding: 24rpx;
    margin-left: auto;
    margin-right: auto;
    margin-top: 36rpx;
    border-radius: 12rpx;
    background: #ffe2b1;
}

.del-view {
    position: absolute;
    top: 0;
    right: 0;
    background: rgba(0,0,0,0.3);
    color: white;
    font-size: 26rpx;
    line-height: 26rpx;
    padding: 16rpx;
    border-top-right-radius: 12rpx;
}

.pay-button::after {
    border: none;
}

.pay-button {
    position: fixed;
    left: 50%;
    right: 0;
    transform: translateX(-50%);
    margin: auto;
    background: none;
    bottom: 64rpx;
    width: 460rpx;
    height: 94rpx;
    line-height: 94rpx;
    color: #bb2b0f;
    font-size: 34rpx;
    z-index: 99999;
}

.pay-button image {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: -1;
    left: 0;
}

.change-ans {
    font-size: 26rpx;
}

.qa-section {
    margin-left: auto;
    margin-right: auto;
    background: white;
    border: 2rpx solid #e5e5e5;
    margin-top: 20rpx;
    position: relative;
    border-radius: 10rpx;
}

.qa-section image {
    width: 100%;
    height: 280rpx;
}

.qa-box {
    position: relative;
    padding: 50rpx 73rpx 70rpx 65rpx;
    background: #fff;
    border-radius: 10rpx;
}

.be-selected-icon {
    width: 169rpx!important;
    height: 142rpx!important;
    position: absolute;
    top: -71rpx;
    right: 0;
}

.qa-question {
    color: #bb2b0f;
    font-size: 34rpx;
}

.radio-label {
    font-size: 28rpx;
    color: #5a5a5a;
    align-items: center;
    margin-top: 20rpx;
    line-height: 1.4;
    display: flex;
}

.radio-label image {
    margin-right: 14rpx;
    display: inline-block;
}

.radio-qa {
    display: flex;
    align-items: left;
    justify-content: space-around;
    flex-direction: column;
    height: 90rpx;
    border-radius: 45rpx;
    padding: 0 40rpx;
    border: 2rpx solid #ccc;
    color: #282828;
    transition: all 0.15s linear;
}

.radio-qa-select {
    border: 2rpx solid #d95940;
    background: #d95940;
    color: #fff;
}

