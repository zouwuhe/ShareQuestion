}

.shareimg-view {
    display: flex;
    border-radius: 20rpx;
}

.container {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.img-box {
    position: relative;
    display: flex;
    width: 455rpx;
    margin-top: 60rpx;
    margin-left: auto;
    margin-right: auto;
}

.refresh {
    position: absolute;
    top: -25rpx;
    right: -25rpx;
    height: 54rpx;
    width: 54rpx;
    background: #fff;
    box-shadow: 0rpx 3rpx 8rpx rgba(153,153,153,0.4);
    border-radius: 50%;
}

.refresh_img {
    position: absolute;
    height: 54rpx;
    width: 54rpx;
}

.refresh_img_ani {
    animation: refresh 0.6s infinite linear;
}

@-webkit-keyframes refresh {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.share-page {
    margin-top: -120rpx;
}

.gradient {
    filter: alpha(opacity=100 finishopacity=100 style=1 startx=0,starty=0,finishx=0,finishy=620) progid:DXImageTransform.Microsoft.gradient(startcolorstr=rgb(216, 89, 64),endcolorstr=rgb(199, 74, 52),gradientType=0);
    background: -webkit-gradient(linear,0 0,0 bottom,from(#d85940),to(#c74a34));
    background: -moz-linear-gradient(top,rgb(216,89,64),rgb(199,74,52));
    background: -o-linear-gradient(top,rgb(216,89,64),rgb(199,74,52));
}

