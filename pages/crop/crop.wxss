.cropper-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
    background-color: #e5e5e5;
}

.cropper-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    background-color: rgba(0,0,0,0.95);
    color: white;
    border-top: 1rpx solid #666;
}

.cancel-button {
    margin-left: 20rpx;
    width: 50%;
}

.finish-button {
    margin-right: 20rpx;
    width: 50%;
    text-align: right;
    font-weight: bold!important;
    color: #ffaa3b!important;
}