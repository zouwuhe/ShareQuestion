.nav-placeholder {
    background: #d85940;
    width: 100%;
}

.msg-box {
    background: #d95940;
    min-height: 240rpx;
    display: flex;
    justify-content: center;
}

.user-box {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar {
    margin-top: 22rpx;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 2rpx solid #fde5a1;
}

.nickname {
    overflow: hidden;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    margin-top: 16rpx;
    margin-bottom: 16rpx;
    display: -webkit-box;
    width: 300rpx;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.nickname text {
}

.content-box {
    background: #fff;
    margin-top: 30rpx;
    padding: 0 32rpx;
}

.content-box .content-item:first-child {
    border: 0;
}

.content-item {
    height: 100rpx;
    border-top: 1rpx solid #ededed;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    justify-content: space-between;
}

.content-left {
    display: flex;
    font-size: 36rpx;
}

.content-right {
    display: flex;
    justify-content: flex-end;
    position: relative;
    align-items: center;
}

.icon {
    width: 44rpx;
    height: auto;
    margin-right: 24rpx;
}

.icon image {
    width: 100%;
    height: 100%;
}

.title {
    font-size: 34rpx;
}

.title,.icon,.cash {
    display: flex;
    align-items: center;
    color: #303030;
}

.cash {
    color: #777;
    font-size: 30rpx;
}

button::after {
    border: none;
}

.news {
    position: relative;
    color: #777;
    font-size: 30rpx;
}

.red-cycle {
    width: 18rpx;
    height: 18rpx;
    background: red;
    border-radius: 50%;
    margin-left: 10rpx;
    align-self: flex-start;
}