.weui-cells__title {
    font-size: 28rpx;
}

.weui-cells {
    margin-top: 0;
}

.weui-cell__hd {
    min-width: 170rpx;
    font-size: 32rpx;
}

.weui-cell__bd {
    font-size: 32rpx;
}

.button-area {
    padding: 32rpx 32rpx 32rpx 32rpx;
}

.submit-btn {
    font-size: 32rpx;
}

.scroll-container {
    height: 100%;
}

.text_placeholder {
    font-size: 32rpx;
    color: #888;
}

.text_desc {
    min-height: 4.2rem;
    padding: 0;
    font-size: 32rpx;
    line-height: 1.5;
}

.weui-cell_access .weui-cell__ft:after {
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    transform: matrix(0.71,0.71,-0.71,0.71,0,0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 15px;
}

.report_title {
    font-size: 36rpx;
    padding: 24rpx 32rpx;
    color: #888;
}

.report_cells {
    margin-bottom: 24rpx;
}

.report_cell {
    padding: 20rpx 32rpx;
    font-size: 32rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
}

.report_cell text {
    vertical-align: middle;
}

.report_cell icon {
    margin-left: 12rpx;
    vertical-align: middle;
}